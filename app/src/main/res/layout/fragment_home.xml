<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HomeFragment">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Baking Pancake"
        android:src="@drawable/bakepankake"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/pankakePNG"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Pancake"
        android:src="@drawable/panpancake"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25:00"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/gifImageView"
        app:layout_constraintStart_toStartOf="@id/gifImageView"
        app:layout_constraintTop_toBottomOf="@id/gifImageView"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/iterationType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start cooking!"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/gifImageView"
        app:layout_constraintStart_toStartOf="@id/gifImageView"
        app:layout_constraintTop_toBottomOf="@id/timerTextView"
        android:layout_marginTop="8dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/iterationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iteration: "
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/iterationTextCount"
        app:layout_constraintStart_toStartOf="@id/gifImageView"
        app:layout_constraintTop_toBottomOf="@id/iterationType"
        android:layout_marginTop="8dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/iterationTextCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/gifImageView"
        app:layout_constraintStart_toEndOf="@id/iterationText"
        app:layout_constraintTop_toBottomOf="@id/iterationType"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/startPauseButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start/Pause"
        app:layout_constraintEnd_toStartOf="@id/resetButton"
        app:layout_constraintStart_toStartOf="@id/gifImageView"
        app:layout_constraintTop_toBottomOf="@id/iterationTextCount"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:minWidth="20dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintEnd_toEndOf="@id/gifImageView"
        app:layout_constraintStart_toEndOf="@id/startPauseButton"
        app:layout_constraintTop_toBottomOf="@id/iterationTextCount"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:minWidth="20dp"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
